{
  "name": "nexus-board",
  "version": "1.0.0",
  "description": "Team collaboration platform",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel --filter=frontend --filter=backend dev",
    "build": "turbo run build",
    "start": "pnpm --parallel --filter=frontend --filter=backend start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "docker:dev": "docker-compose up",
    "docker:down": "docker-compose down",
    "prisma:migrate": "pnpm --filter=backend prisma:migrate",
    "prisma:generate": "pnpm --filter=backend prisma:generate"
  },
  "keywords": [
    "collaboration",
    "team",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  },
  "devDependencies": {
    "turbo": "^1.11.0"
  }
}
