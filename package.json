{
  "name": "nexus-board",
  "version": "1.0.0",
  "description": "Team collaboration platform",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "docker:dev": "docker-compose up",
    "docker:down": "docker-compose down",
    "prisma:generate": "pnpm --filter=@nexus-board/api prisma:generate",
    "prisma:migrate": "pnpm --filter=@nexus-board/api prisma:migrate"
  },
  "keywords": [
    "collaboration",
    "team",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "prettier": "^3.0.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "typescript": "^5.3.0"
  }
}
